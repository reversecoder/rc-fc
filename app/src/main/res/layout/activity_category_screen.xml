<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_bg"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_category"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:padding="@dimen/dp_5">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_category_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".52"
            android:padding="@dimen/dp_2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/curv_box_shape"
                android:padding="@dimen/dp_5">

                <TextView
                    android:id="@+id/tv_playing_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="@string/txt_before_playing"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlueDark"
                    android:textSize="@dimen/medium_font_size"
                    android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_playing_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_below="@+id/tv_playing_title"
                        android:paddingLeft="10dip"
                        android:paddingRight="@dimen/dp_10"
                        android:scaleType="centerCrop"
                        android:text="@string/txt_before_playing_list"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlueDark"
                        android:textSize="10sp"
                        android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:padding="@dimen/dp_2">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/ic_home" />

        </LinearLayout>
