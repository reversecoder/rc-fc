<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_bg"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".35"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".35"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/iv_app_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_facecaseguy" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/iv_setting"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginRight="@dimen/dp_20"
                        android:src="@drawable/ic_settings"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_quit"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@drawable/ic_quit" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".35"
                android:gravity="left|top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:text="FACECASE"
                    android:textColor="@color/color_white"
                    android:textSize="80sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:scaleType="centerCrop"
                    android:text="Bet &amp; Bluff"
                    android:textColor="@color/color_white"
                    android:textSize="40sp"
                    android:textStyle="bold|italic"
                    android:layout_marginRight="@dimen/dp_15"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_10">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_play"
                        android:layout_width="350dp"
                        android:layout_height="110dp"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_play1" />

                    <ImageView
                        android:id="@+id/iv_watch_sample"
                        android:layout_width="350dp"
                        android:layout_height="110dp"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_watch_sample" />

                    <ImageView
                        android:id="@+id/iv_intro_video"
                        android:layout_width="350dp"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_play2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".15"
                    android:gravity="right|center_vertical|bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_pokerchips"
                        android:layout_width="350dip"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_pokerchips" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>